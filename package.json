{
  "name": "cpat-training-platform",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "build:analyze": "npm run build && npx serve dist",
    "build:stats": "npm run build && open dist/stats.html",
    "performance:ci": "node scripts/performance-ci.js",
    "performance:baseline": "node scripts/performance-ci.js production --baseline",
    "performance:lighthouse": "node scripts/performance-ci.js production --lighthouse",
    "performance:clinical": "node scripts/performance-ci.js clinical --lighthouse",
    "test:build": "npm run build && npm run preview",
    "test": "vitest",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest --watch",
    "test:unit:coverage": "vitest run --coverage",
    "test:unit:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:e2e:ui": "playwright test --ui",
    "test:accessibility": "playwright test tests/e2e/accessibility-compliance.spec.ts",
    "test:performance": "playwright test tests/e2e/performance-testing.spec.ts",
    "test:therapeutic": "playwright test tests/e2e/therapeutic-user-journeys.spec.ts",
    "test:all": "npm run test:unit && npm run test:e2e",
    "test:all:coverage": "npm run test:unit:coverage && npm run test:e2e",
    "test:ci": "npm run test:unit:coverage && npm run test:e2e --reporter=github",
    "test:therapeutic:ci": "npm run test:therapeutic --reporter=json --output-dir=tests/reports",
    "test:install": "playwright install",
    "test:install:deps": "playwright install-deps",
    "test:luxury": "npm run test:accessibility && npm run test:performance",
    "test:clinical": "npm run test:therapeutic && npm run test:accessibility"
  },
  "dependencies": {
    "@mdx-js/loader": "^3.1.1",
    "@mdx-js/react": "^3.1.1",
    "@types/react-router-dom": "^5.3.3",
    "@vitejs/plugin-react-refresh": "^1.3.6",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.2",
    "lucide-react": "^0.542.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.8.2"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@eslint/js": "^9.33.0",
    "@playwright/experimental-ct-react": "^1.55.0",
    "@playwright/test": "^1.55.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.1",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "axe-core": "^4.10.3",
    "chrome-launcher": "^1.2.0",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "happy-dom": "^18.0.1",
    "jest-environment-jsdom": "^30.1.2",
    "jsdom": "^26.1.0",
    "lighthouse": "^12.8.2",
    "msw": "^2.11.1",
    "playwright": "^1.55.0",
    "rollup-plugin-visualizer": "^6.0.3",
    "serve": "^14.2.5",
    "terser": "^5.44.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4",
    "web-vitals": "^5.1.0"
  }
}
